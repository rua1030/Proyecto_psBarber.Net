<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <img width="20%" height="40%" src="/img/1687297823359 (1).png" alt="">
                <span class="d-none d-lg-block">Ps_barber</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Se {{>nav}}<!-- End Icons Navigation -->
        @Html.Partial("_Nav")
    </header><!-- End Header -->


    <!-- ======= Sidebar ======= -->
    <!-- End Sidebar-->
    <main id="main" class="main">
        <div class="pagetitle">
            <h1>Agregar clientes</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item"><a href="index.html">Listar clientes</a></li>
                    <li class="breadcrumb-item active">agregar clientes</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">

            <!-- Custom Styled Validation -->
            <form asp-action="Create" class="row g-3 needs-validation">
                <div class="col-md-4">

                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" type="text" name="nombre" id="nombre" value="" class="form-control" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="col-md-4">

                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" type="text" name="telefono" id="telefono" value="" required class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    
                    <div class="">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" type="text" class="form-control" aria-describedby="inputGroupPrepend" required />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="Documento" class="control-label"></label>
                    <input asp-for="Documento" type="text" name="documento" class="form-control" id="documento" required>
                    <span asp-validation-for="Documento" class="text-danger"></span>
                </div>

                <div class="col-12">
                   
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" onclick="validarCliente()" type="submit">Agregar</button>
                </div>
            </form>
            <div>
                <a asp-action="Index">ir a la lista</a>
            </div>
        </section>

    </main><!-- End #main -->
