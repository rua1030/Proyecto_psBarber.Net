@model Usuario
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link href='https://fonts.googleapis.com/css?family=Courgette' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="ruta/a/bootstrap.min.css" rel="stylesheet" />
    <script src="ruta/a/jquery.min.js"></script>
    <script src="ruta/a/bootstrap.min.js"></script>
    <style>
        body {
            background-image: url(img/fondorregistrar.jpg);
            background-position: center;
            background-size: cover;
        }
        
        .logo-card {
            width: 40%;
            height: 40%;
            margin: 0 auto 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }



        .logo {
            max-width: 5%;
            max-height: 5%;
        }

        .brand-text {
            font-family: 'Courgette';
            font-size: 100px;
            font-size: 40px;
            font-style: italic;
            text-align: center;
            margin-top: 10px;
        }

        .password-toggle {
            position: relative;
        }

            .password-toggle .toggle-icon {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                cursor: pointer;
            }

                .password-toggle .toggle-icon i {
                    font-size: 18px;
                }
        /* Estilos para el formulario */
        .form-container {
            max-width: 500px;
            position: center;
            margin-top: 5%;
            margin: 0auto;
            padding: 20px;
            background-color: #ffffff86;
            border-radius: 10px;
            padding-top: 2%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        /* Estilos para los botones */

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
                border-color: #0062cc;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <div class="card-body">
                        <img src="~/img/1687297823359 (1).png" alt="Logo" class="logo-card">
                        <p class="brand-text">PS Barber</p>
                        <h5 class="card-title">Iniciar sesión</h5>
                        <form asp-controller="Acceso" asp-action="Index" method="post">
                            <div class="mb-3">
                                <label for="exampleInputEmail1" class="form-label">Correo</label>
                                <input type="email" class="form-control" asp-for="Correo">
                                @*<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>*@
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                                <input type="password" class="form-control" asp-for="Clave">
                            </div>
                            @* <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div>*@
                            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                            <div class="mt-3">
                                <a asp-area="" asp-controller="Usuarios" asp-action="Create">
                                    <i class="bi bi-circle"></i><span>Registrarse</span>
                                </a>
                                <br>
                                <a href="/recuperarCon" class="text-decoration-none">¿Has olvidado tu contraseña?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

    @*------ GOOGLEAR ====> form bootstrap 5 ----------------*@

  

</body>
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</html>
